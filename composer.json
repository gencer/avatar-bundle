{
    "name": "maba/avatar-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 bundle for getting and displaying user's avatar",
    "keywords": ["avatar", "avatar bundle", "symfony2", "gravatar"],
    "license": "MIT",
    "authors": [
        {
            "name": "Marius BalÄytis",
            "email": "marius.balcytis@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "^2.3",
        "maba/dependency-injection-extra": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "symfony/browser-kit": "2.3",
        "symfony/twig-bundle": "^2.3",
        "symfony/filesystem": "2.3",
        "satooshi/php-coveralls": "^0.6.1"
    },
    "suggest": {
        "symfony/twig-bundle": "This package provides a twig extension"
    },
    "autoload": {
        "psr-4": {
            "Maba\\Bundle\\AvatarBundle\\": "src",
            "Maba\\Bundle\\AvatarBundle\\Tests\\": "test"
        }
    }
}
